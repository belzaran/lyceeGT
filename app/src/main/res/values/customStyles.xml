<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ACTIVITY VIEWS -->

    <style name="ActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/colorBlank</item>
        <item name="android:padding">@dimen/default_padding</item>

    </style>

    <style name="ActivityScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBlank</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:fillViewport">true</item>
    </style>


<!-- TEXT VIEWS -->

    <style name ="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/size_title</item>
        <item name="android:padding">@dimen/title_padding</item>
    </style>

    <style name="TextQuestion">
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="TextResult">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- OTHERS -->

    <style name="ResultBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:max">20</item>
        <item name="android:layout_weight">1</item>
        <item name="android:progress">10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/custom_progress_bar</item>-->
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
        <!--item name="android:progressTint">#578A1C</-item-->
    </style>

    <style name = "SeekBarLevel" parent="@style/Widget.AppCompat.SeekBar.Discrete">
        <item name="android:max">2</item>
        <item name="android:progress">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/seekbar_padding</item>
        <item name="android:paddingRight">@dimen/seekbar_padding</item>
        <item name="android:thumb">@drawable/custom_seekbar_thumb</item>
    </style>

    <style name = "CustomSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/switch_padding</item>
        <item name="android:padding">@dimen/switch_padding</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:switchPadding">@dimen/switch_padding</item>
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:showText">true</item>
        <item name="android:textOn">Oui</item>
        <item name="android:textOff">Non</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
        <item name="android:switchTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="ButtonValidation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlank</item>
        <item name="android:layout_margin">@dimen/button_padding</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="CustomList">
        <item name="android:layout_marginTop">@dimen/list_padding</item>
        <item name="android:layout_marginLeft">@dimen/list_padding</item>
        <item name="android:layout_marginRight">@dimen/list_padding</item>
        <item name="android:layout_marginStart">@dimen/list_padding</item>
        <item name="android:layout_marginBottom">@dimen/list_padding</item>
        <item name="android:layout_marginEnd">@dimen/list_padding</item>
        <item name="android:textSize">@dimen/list_text</item>
    </style>

</resources>
