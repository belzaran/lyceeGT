<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="ActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/colorBlank</item>
        <item name="android:padding">12sp</item>
    </style>

    <style name="TextResult">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ResultBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:max">20</item>
        <item name="android:layout_weight">1</item>
        <item name="android:progress">10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48sp</item>
        <!--item name="android:progressTint">#578A1C</-item-->
    </style>



    <style name="TextQuestion">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>

    </style>

    <style name = "SeekBarLevel" parent="@style/Widget.AppCompat.SeekBar.Discrete">
        <item name="android:max">2</item>
        <item name="android:progress">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name = "CustomSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:switchPadding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:showText">true</item>
        <item name="android:textOn">Oui</item>
        <item name="android:textOff">Non</item>
    </style>

    <style name ="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonValidation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlank</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

</resources>
