<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityStyle">

<androidx.constraintlayout.widget.ConstraintLayout style="@style/ActivityStyle">
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/result_text_title"
        android:text="Résultats"
        style="@style/TextTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_text_l1"/>

        <TextView
        android:id="@+id/result_text_l1"
        android:text="Lycée 1"
        style="@style/TextResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result_bar_l1"
        app:layout_constraintTop_toBottomOf="@id/result_text_title"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"/>

    <ProgressBar
        android:id="@+id/result_bar_l1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_text_title"
        style="@style/ResultBar"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"/>

    <TextView
        android:id="@+id/result_text_l2"
        android:text="Lycée 2"
        style="@style/TextResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result_bar_l2"
        app:layout_constraintTop_toBottomOf="@id/result_text_l1"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"/>

    <ProgressBar
        android:id="@+id/result_bar_l2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_text_l1"
        style="@style/ResultBar"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"/>

    <TextView
        android:id="@+id/result_text_l3"
        android:text="Lycée 3"
        style="@style/TextResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result_bar_l3"
        app:layout_constraintTop_toBottomOf="@id/result_text_l2"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"/>

    <ProgressBar
        android:id="@+id/result_bar_l3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/result_text_l3"
        style="@style/ResultBar"
        app:layout_constraintWidth_percent="0.6"/>

    <TextView
        android:id="@+id/result_text_l4"
        android:text="Lycée 4"
        style="@style/TextResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result_bar_l4"
        app:layout_constraintTop_toBottomOf="@id/result_text_l3"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"/>

    <ProgressBar
        android:id="@+id/result_bar_l4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_text_l3"
        style="@style/ResultBar"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"/>

    <TextView
        android:id="@+id/result_text_l5"
        android:text="Lycée 5"
        style="@style/TextResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result_bar_l5"
        app:layout_constraintTop_toBottomOf="@id/result_text_l4"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"/>

    <ProgressBar
        android:id="@+id/result_bar_l5"
        style="@style/ResultBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbarSize="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/result_text_l5"
        app:layout_constraintBottom_toTopOf="@id/result_text_l6"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/result_text_l6"
        android:text="Lycée 6"
        style="@style/TextResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/result_bar_l6"
        app:layout_constraintTop_toBottomOf="@id/result_text_l5"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"/>

    <ProgressBar
        android:id="@+id/result_bar_l6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_text_l5"
        style="@style/ResultBar"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>